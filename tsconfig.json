{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "./tests-out",
        "rootDir": "./src",
        "esModuleInterop": true,
        "lib": ["es2021"],
        "typeRoots": ["./node_modules/@types", "src/helper/types"],
        "resolveJsonModule": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}